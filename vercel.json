{
  "version": 2,

  "outputDirectory": "public",

  "env": {
    "MONGODB_URI": "@mongodb_uri"
  },

  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/api/clients",
      "dest": "/api/clients.js"
    },
    {
      "src": "/api/productTypes",
      "dest": "/api/productTypes.js"
    },
    {
      "src": "/api/orders",
      "dest": "/api/orders.js"
    },

    {
      "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|ico|svg|json|webp|map|txt))",
      "dest": "/public/$1" 
    },

    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}