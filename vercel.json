
{
  "version": 2,
  "builds": [
    {
      "src": "public/**", 
      "use": "@vercel/static-build"
    },
    {
      "src": "api/*.js", 
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}