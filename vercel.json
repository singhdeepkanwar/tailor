
{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false, 

  "outputDirectory": "public",

  "builds": [
   
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}